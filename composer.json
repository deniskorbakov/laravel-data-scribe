{
    "name": "deniskorbakov/laravel-data-scribe",
    "description": "A Scribe Plugin to generate API doc from spatie/laravel-data",
    "keywords": [
        "scribe",
        "laravel-data",
        "plugin",
        "php"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Denis Korbakov",
            "email": "korbakovd@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "knuckleswtf/scribe": "^5.0",
        "spatie/laravel-data": "^4.0"
    },
    "require-dev": {
      "pestphp/pest": "^4.0",
      "phpstan/phpstan": "^2.1",
      "rector/rector": "*",
      "squizlabs/php_codesniffer": "^3.13 || ^4.0",
      "slevomat/coding-standard": "^8.20",
      "orchestra/testbench": "^10.4"
    },
    "autoload": {
        "psr-4": {
            "DenisKorbakov\\LaravelDataScribe\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\": "workbench/app/",
            "Database\\Factories\\": "workbench/database/factories/",
            "Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "tests": "pest --stop-on-failure --colors",
        "tests-coverage": "pest --coverage --min=90",
        "tests-mutation": "pest --mutate --min=80",
        "lint": [
            "@phpstan",
            "@cs",
            "@rector"
        ],
        "phpstan": "phpstan analyse --memory-limit=2G",
        "rector": "rector",
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "post-autoload-dump": [],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "test": [
            "@clear",
            "@php vendor/bin/pest"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
